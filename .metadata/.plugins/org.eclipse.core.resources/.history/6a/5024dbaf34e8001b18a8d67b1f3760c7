<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.day.dto.OrderMapper">
<resultMap id="orderResultMap" type="" ></resultMap>
	<select id="selectById" parameterType="string"
		resultMap="orderResultMap"></select>
	SELECT oi.order_no,order_dt, order_prod_no, prod_name, order_quantity
	FROM order_info oi
	JOIN order_line ol
	ON (oi.order_no=ol.order_no)
	JOIN product p
	ON(ol.order_prod_no=p.prod_no)
	WHERE order_id=#{id}
	ORDER BY oi.order_no DESC,order_prod_no
</mapper>
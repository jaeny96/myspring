<mapper namespace="com.day.dto.ProductMapper">
	<!-- 혹은 parameterType="string"이라고 사용해도 됨 -->
	<select id="selectByNo" parameterType="java.lang.String"
		resultType="com.day.dto.Product">
		SELECT * FROM product WHERE prod_no=#{aaa}
	</select>
	<select id="selectAll" resultType="com.day.dto.Product">
		SELECT * FROM product ORDER BY
		prod_no ASC
	</select>
	<select id="selectAllPage" parameterType="java.util.HashMap" resultType="com.day.dto.Product">
		SELECT * 
			FROM (
			SELECT rownum rn, a.* 
				FROM ( 
				SELECT *
				FROM product ORDER BY
				prod_no) a
				) WHERE rn BETWEEN start_row(#{currentPage},#{cnt_per_page}) AND 
				end_row(#{currentPage},#{cnt_per_page})
	</select>
	<select id="selectByName" resultType="com.day.dto.Product">
	
	</select>
</mapper>